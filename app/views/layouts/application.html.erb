<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="utf-8">
  <title>Pragprog Booksオンラインストア</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class='<%= controller.controller_name %>'>
  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || "Pragmatic Bookshelf" %>
  </div>
  <div id="columns">
    <div id="side">
      <ul>
        <li><a href="/">ホーム</a></li>
        <li><a href="#faq">よくある質問</a></li>
        <li><a href="#news">ニュース</a></li>
        <li><a href="#contact">お問い合わせ</a></li>
        <li><p><%= sanitize(@time) %></p></li>
        <% if @cart %>
        <li><p><%= link_to('カートを見る', cart_path(@cart)) %></p></li>
        <% end %>
      </ul>

      <% if session[:user_id] %>
      <ul>
        <li><%= link_to('注文',   orders_path)   %></li>
        <li><%= link_to('商品',   products_path) %></li>
        <li><%= link_to('ユーザ', users_path)    %></li>
      </ul>
      <%= button_to('ログアウト', logout_path, method: :delete) %>
      <% end %>
    </div>

    <div id="main">
      <%= yield %>
    </div>
  </div>
</body>
</html>
