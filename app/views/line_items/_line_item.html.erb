<% if line_item == @current_item %>
<tr id="current_item">
<% else %>
<tr>
<% end %>
  <td><%= line_item.quantity %>&times;</td>
  <td><%= truncate(line_item.product.title, length: 40) %></td>
  <td class="item_price"><%= number_to_currency(line_item.total_price) %></td>
  <td><%= button_to('x', line_item, method: :delete, data: {confirm: '本当によいですか？'}) %></td>
</tr>
